<querylanguages>
	<!-- type named or hql must be of entity (managed by hibernate) -->
	<querylanguage>
		<HelloHibernateGwQuerySpecification>
			<QueryLanguage type="hql" name="findHelloByIds" value="from HelloHibernateGw where id in (:id1,:id2)">
				<!-- all Parmameter element stay inside QueryLanguage element -->	
				<Parameter name="id1"/>
				<Parameter name="id2"/>
			</QueryLanguage>
		</HelloHibernateGwQuerySpecification>
		
		<HelloHibernateGwQuerySpecification>
			<QueryLanguage type="hql" name="findHelloByIdList" value="from HelloHibernateGw where id in (:idList)">
				<!-- the value of the parameter xxxList must to be a comma separated list -->	
				<Parameter name="idList"/>
			</QueryLanguage>
		</HelloHibernateGwQuerySpecification>
		
		<HelloHibernateGwQuerySpecification>
			<QueryLanguage type="named" name="findHelloById">
				<Parameter name="Id"/>
			</QueryLanguage>
		</HelloHibernateGwQuerySpecification>
		<HelloHibernateGwQuerySpecification>
			<!-- each querySpecification can only have 1 QueryLanguage -->
			<QueryLanguage type="named" name="findHelloByDates">
				<Parameter name="StartDate"/>
				<Parameter name="EndDate"/>
			</QueryLanguage>
		</HelloHibernateGwQuerySpecification>
		<HelloHibernateGwQuerySpecification>
			<!-- type scalars can be of none-entity moa (not managed by hibernate), its SqlString element must not be null, and must have Return element to define its return types -->
			<QueryLanguage type="scalars" name="findHelloByIdDate">
				<SqlString
					value="select id,message,message_number as MessageNumber,last_modified_date as LastModifiedDate,last_modified_datetime as LastModifiedDatetime from hello_hibernate_gw where id = :Id and  Last_modified_date = to_date(:StartDate,'YYYY-MM-DD') ">
					<Return name="Id" type="string" />
					<Return name="Message" type="string" />
					<Return name="MessageNumber" type="string" />
					<Return name="LastModifiedDate" type="OpenEaiDate" />
					<Return name="LastModifiedDatetime" type="OpenEaiDatetime" />
				</SqlString>
				<Parameter name="Id"/>				
				<Parameter name="StartDate"/>
			</QueryLanguage>
		</HelloHibernateGwQuerySpecification>		
	</querylanguage>
	
	<!-- type named or hql must be of entity (managed by hibernate) -->
	<querylanguage>
		<BillQuerySpecification>
			<QueryLanguage type="named" name="findBillsByDates" >
				<Parameter name="StartDate"/>
				<Parameter name="EndDate"/>
			</QueryLanguage>
		</BillQuerySpecification>
		<!--not working yet as this is a collection-->
		<BillQuerySpecification>
			<QueryLanguage type="named" name="findBillsByLinkedAccountId">
				<Parameter name="LinkedAccountId"/>
			</QueryLanguage>
		</BillQuerySpecification>
	</querylanguage>
	<querylanguage>
		<ServiceSecurityAssessmentQuerySpecification>
			<QueryLanguage type="hql" name="byServiceId" value="from ServiceSecurityAssessment where :ServiceId in elements(ServiceId) ">
				<Parameter name="ServiceId"/>
			</QueryLanguage>
		</ServiceSecurityAssessmentQuerySpecification>
		<ServiceSecurityAssessmentQuerySpecification>
			<QueryLanguage type="hql" name="byIds" value="from ServiceSecurityAssessment where ServiceSecurityAssessmentId = :ServiceSecurityAssessmentId and :ServiceId in elements(ServiceId) ">
				<Parameter name="ServiceSecurityAssessmentId"/>
				<Parameter name="ServiceId"/>
			</QueryLanguage>
		</ServiceSecurityAssessmentQuerySpecification>
	</querylanguage>
	<querylanguage>
		<TermsOfUseQuerySpecification>
			<QueryLanguage type="hql" name="inEffectTermsOfUse" value="from TermsOfUse where EffectiveDate &lt;= to_date(:currentDate, 'YYYY-MM-DD') and (ExpirationDate=null or ExpirationDate &gt;= to_date(:currentDate, 'YYYY-MM-DD')) ">
				<Parameter name="currentDate"/>
			</QueryLanguage>
		</TermsOfUseQuerySpecification>
	</querylanguage>
	<querylanguage>
		<VirtualPrivateCloudProvisioningQuerySpecification>
			<QueryLanguage max="20" type="hql" name="maxVpcps" value="from VirtualPrivateCloudProvisioning order by CreateDatetime desc">
			</QueryLanguage>
		</VirtualPrivateCloudProvisioningQuerySpecification>
		<VirtualPrivateCloudProvisioningQuerySpecification>
			<QueryLanguage type="hql" name="allVpcps" value="from VirtualPrivateCloudProvisioning order by CreateDatetime desc">
			</QueryLanguage>
		</VirtualPrivateCloudProvisioningQuerySpecification>
	</querylanguage>
	<querylanguage>
		<AccountNotificationQuerySpecification>
			<QueryLanguage max="200" type="hql" name="byAccountId" value="from AccountNotification where AccountId=:AccountId order by CreateDatetime desc">
				<Parameter name="AccountId"/>
			</QueryLanguage>
		</AccountNotificationQuerySpecification>
		<!-- Get all AccountNotifications created between start and end dates -->
		<AccountNotificationQuerySpecification>
			<QueryLanguage type="hql" name="findAccountNotificationsBetweenDates" value="from AccountNotification where CreateDatetime between to_date(:startDate,'YYYY-MM-DD HH24:MI:SS') and to_date(:endDate,'YYYY-MM-DD HH24:MI:SS') order by CreateDatetime desc">
				<Parameter name="startDate"/>
				<Parameter name="endDate"/>
			</QueryLanguage>
		</AccountNotificationQuerySpecification>
		
		<!-- Get all AccountNotifications created before end date -->
		<AccountNotificationQuerySpecification>
			<QueryLanguage type="hql" name="findAccountNotificationsBeforeDate" value="from AccountNotification where CreateDatetime &lt;= to_date(:endDate,'YYYY-MM-DD HH24:MI:SS') order by CreateDatetime desc">
				<Parameter name="endDate"/>
			</QueryLanguage>
		</AccountNotificationQuerySpecification>

		<!-- Get all AccountNotifications created after start date -->
		<AccountNotificationQuerySpecification>
			<QueryLanguage type="hql" name="findAccountNotificationsAfterDate" value="from AccountNotification where CreateDatetime &gt;= to_date(:startDate,'YYYY-MM-DD HH24:MI:SS') order by CreateDatetime desc">
				<Parameter name="startDate"/>
			</QueryLanguage>
		</AccountNotificationQuerySpecification>
	</querylanguage>
	<querylanguage>
		<UserNotificationQuerySpecification>
			<QueryLanguage max="200" type="hql" name="byUserId" value="from UserNotification where UserId = :UserId order by CreateDatetime desc">
				<Parameter name="UserId"/>
			</QueryLanguage>
		</UserNotificationQuerySpecification>
		<UserNotificationQuerySpecification>
			<QueryLanguage max="5" type="hql" name="unreadByUserId" value="from UserNotification where UserId = :UserId and Read='false' order by CreateDatetime desc">
				<Parameter name="UserId"/>
			</QueryLanguage>
		</UserNotificationQuerySpecification>
		<UserNotificationQuerySpecification>
			<QueryLanguage max="200" type="hql" name="unreadMaxByUserId" value="from UserNotification where UserId = :UserId and Read='false' order by CreateDatetime desc">
				<Parameter name="UserId"/>
			</QueryLanguage>
		</UserNotificationQuerySpecification>
		<!-- Get all UserNotifications created between start and end dates -->
		<UserNotificationQuerySpecification>
			<QueryLanguage type="hql" name="findUserNotificationsBetweenDates" value="from UserNotification where CreateDatetime between to_date(:startDate,'YYYY-MM-DD HH24:MI:SS') and to_date(:endDate,'YYYY-MM-DD HH24:MI:SS') order by CreateDatetime desc">
				<Parameter name="startDate"/>
				<Parameter name="endDate"/>
			</QueryLanguage>
		</UserNotificationQuerySpecification>
		
		<!-- Get all UserNotifications created before end date -->
		<UserNotificationQuerySpecification>
			<QueryLanguage type="hql" name="findUserNotificationsBeforeDate" value="from UserNotification where CreateDatetime &lt;= to_date(:endDate,'YYYY-MM-DD HH24:MI:SS') order by CreateDatetime desc">
				<Parameter name="endDate"/>
			</QueryLanguage>
		</UserNotificationQuerySpecification>

		<!-- Get all UserNotifications created after start date -->
		<UserNotificationQuerySpecification>
			<QueryLanguage type="hql" name="findUserNotificationsAfterDate" value="from UserNotification where CreateDatetime &gt;= to_date(:startDate,'YYYY-MM-DD HH24:MI:SS') order by CreateDatetime desc">
				<Parameter name="startDate"/>
			</QueryLanguage>
		</UserNotificationQuerySpecification>
	</querylanguage>
</querylanguages>
